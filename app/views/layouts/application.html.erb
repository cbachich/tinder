<!DOCTYPE html>
<html lang="en">
<head>
  <%= render 'layouts/title' %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>

    <% if flash[:notice] %>
      <div class="row">
        <div class="alert alert-info"><strong><%= flash[:notice] %></strong></div>
      </div>
    <% end %>

    <div class="row">
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>
  </div>

</body>
</html>
