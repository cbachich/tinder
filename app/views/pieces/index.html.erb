<% provide :title, "pieces" %>
<% if @pieces.empty? %>
  <p>You have no pieces.</p>
<% else %>
  <% @pieces.each do |piece| %>
    <p>
      <%= link_to piece.current_version.title, piece_path(piece.id) %>
      | <%= link_to "edit", edit_piece_path(piece.id) %>
      | <%= link_to "delete", piece_path(piece.id), method: :delete %>
    </p>
  <% end %>
<% end %>
<p><%= link_to "Create one!", new_piece_path %></p>
