<% title = 'your pieces' %>
<% provide :title, title %>

<div class="row">
  <div class="span12">
    <h1><%= title %></h1>
    <%= render partial: "pieces/create_button" %>
    <% if @pieces.empty? %>
      <p>You have no pieces.</p>
    <% else %>
      <table class="table table-striped table-condensed">
        <% @pieces.each do |piece| %>
          <tr class="piece-row">
            <td class="span2 piece-links" style="vertical-align:middle;">
              <%= render partial: "pieces/links", locals: { piece: piece } %>
            </td>
            <td style="text-align:left;" class="piece-version">
              <h3 class="piece-title"><%= link_to piece.title, piece %></h3>
              <p class="piece-blurb muted"><%= piece.blurb %></p>
              <% last_modified = "Last modified #{time_ago_in_words(piece.current_version.updated_at)} ago" %>
              <p class="piece-last-modified muted small"><small><%= last_modified %></small></p>
            </td>
          </tr>
        <% end %>
      </table>
    <% end %>
    <%= render partial: "pieces/create_button" %>
  </div>
</div>
