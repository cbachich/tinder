<li>
<% pieces_class = "btn"
  pieces_class += " btn-link" unless current_page == :pieces %>
  <div class="btn-group">
    <%= link_to "<i class=\"icon-pencil\"></i>".html_safe, new_piece_path, class: "btn btn-primary create-piece", title: "create a new piece" %>
    <%= link_to "your pieces", pieces_path, class: pieces_class, title: "view all your pieces in a list" %>
  </div>
  <% unless current_page == :pieces %>
    <span class="divider">/</span>
  <% end %>
</li>
